<?xml version="1.0" encoding="UTF-8"?>
  <launch>
    <!-- Arguments -->
    <arg name="slam_methods" default="gmapping"/>
    <arg name="set_base_frame" default="base_link"/>
    <arg name="set_odom_frame" default="world"/>
    <arg name="set_map_frame"  default="map"/>


    <node pkg="gmapping" type="slam_gmapping" name="hexapod_slam_gmapping" output="screen">
      <param name="base_frame" value="$(arg set_base_frame)"/>
      <param name="odom_frame" value="$(arg set_odom_frame)"/>
      <param name="map_frame"  value="$(arg set_map_frame)"/>
      <rosparam command="load" file="$(find hexapod)/hexapod_mapping/gmapping_params.yaml" />
    </node>
  </launch>
