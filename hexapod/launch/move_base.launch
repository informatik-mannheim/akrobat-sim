<?xml version="1.0" encoding="UTF-8"?>
  <launch>
      <!-- move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      <param name="clearing_rotation_allowed" value="false" />
      <param name="move_forward_only" value="true"/>
      <rosparam file="$(find hexapod)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find hexapod)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find hexapod)/config/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find hexapod)/config/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find hexapod)/config/base_local_planner_params.yaml" command="load" />
      <rosparam file="$(find hexapod)/config/move_base_params.yaml" command="load" />
      <remap from="odom" to="odom"/>
      <remap from="cmd_vel" to="/cmd_vel" />
      <remap from="map" to="/map"/>
    </node>
  </launch>
